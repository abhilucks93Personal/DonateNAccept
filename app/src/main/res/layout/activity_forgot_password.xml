<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_bg"
    android:orientation="vertical"
    android:paddingTop="@dimen/_14sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:padding="@dimen/_8sdp"
            android:text="Forgot Password"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_20sdp" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/_6sdp"
            android:padding="@dimen/_4sdp"
            android:src="@drawable/back_arrow" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_16sdp"
        android:layout_marginRight="@dimen/_16sdp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We will send you a One Time Password (OTP) to your registered Mobile Number"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_11sdp"
            android:padding="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_16sdp"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_12sdp"
            android:text="PHONE NO"
            android:textColor="@color/colorWhite50" />

        <EditText
            android:id="@+id/forgot_password_et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/layout_bg_et2"
            android:gravity="left"
            android:inputType="phone"
            android:padding="@dimen/_12sdp"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_14sdp"
            android:background="@drawable/layout_bg_signin"
            android:gravity="center"
            android:padding="@dimen/_12sdp"
            android:text="Send OTP"
            android:textColor="@color/colorWhite" />

    </LinearLayout>







</LinearLayout>

